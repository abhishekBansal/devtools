{
  "name": "devtools-cli",
  "version": "1.0.0",
  "description": "Command-line interface for devtools utilities",
  "type": "module",
  "bin": {
    "devtools": "./bin/devtools"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --out-dir dist --format esm --clean",
    "dev": "tsup src/index.ts --out-dir dist --format esm --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "@devtools/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "vitest": "^1.4.0",
    "@types/node": "^20.12.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "devtools",
    "base64",
    "json",
    "hex",
    "timestamp",
    "uuid",
    "developer-tools"
  ]
}
